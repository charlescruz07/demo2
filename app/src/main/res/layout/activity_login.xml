<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cruz.sportify.LoginRegistration.LoginActivity"
    android:background="@drawable/background"
    >

    <ImageView
        android:layout_width="129dp"
        android:layout_height="172dp"
        android:src="@drawable/icon_2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="114dp"
        app:layout_constraintHorizontal_bias="0.502"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="206dp"
        android:layout_height="45dp"
        android:src="@drawable/sportify_white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/imageView3" />

    <Button
        android:id="@+id/facebookLogin"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:text="Login with facebook"
        android:background="@drawable/login_facebook"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/googleLogin"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:text="Login with google"
        android:background="@drawable/login_google"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/facebookLogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
